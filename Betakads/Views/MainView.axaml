<UserControl
    x:Class="Betakads.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Betakads.Models"
    xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
    xmlns:vm="clr-namespace:Betakads.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid Margin="8" RowDefinitions="Auto,*">

        <!--  Top Section with Title  -->
        <Grid
            Grid.Row="0"
            Margin="4"
            ColumnDefinitions="*,*">
            <StackPanel Grid.Column="0">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Medium"
                    Text="Betakads" />
                <TextBlock
                    Grid.Row="1"
                    FontSize="10"
                    FontWeight="Light"
                    Text="Anki Generator Powered by AI" />
            </StackPanel>

        </Grid>

        <!--  Main Section  -->
        <Grid
            Grid.Row="1"
            ColumnDefinitions="1.5*,*"
            RowDefinitions="Auto,*">

            <!--  File Configuration  -->
            <Expander
                Grid.Row="0"
                Grid.Column="0"
                Margin="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsExpanded="True">
                <Expander.Header>
                    Data Source Configuration
                </Expander.Header>
                <StackPanel Orientation="Vertical" Spacing="4">
                    <Grid
                        ColumnDefinitions="*,*"
                        RowDefinitions="Auto,Auto,Auto,Auto"
                        ShowGridLines="False">

                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Vertical"
                            Spacing="4">
                            <TextBlock Text="Select Data Source Type" />
                            <RadioButton
                                x:Name="RadioBtn_Youtube"
                                Content="Youtube video"
                                GroupName="FileType"
                                IsChecked="{Binding IsSelectSourceTypeYoutube}" />
                            <RadioButton
                                x:Name="RadioBtn_PDF"
                                Content="PDF"
                                GroupName="FileType" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Orientation="Vertical"
                            Spacing="4">
                            <!--  For Youtube  -->
                            <StackPanel
                                IsVisible="{Binding #RadioBtn_Youtube.IsChecked}"
                                Orientation="Vertical"
                                Spacing="4">

                                <TextBlock VerticalAlignment="Center" Text="Youtube URL" />
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Text="{Binding YoutubeVideoUrl}"
                                    Watermark="https://www.youtube.com/" />

                                <WrapPanel>
                                    <WrapPanel.Styles>
                                        <Style Selector="TextBlock">
                                            <Setter Property="FontSize" Value="12" />
                                        </Style>
                                    </WrapPanel.Styles>
                                    <TextBlock FontWeight="SemiBold" Text="{Binding YoutubeMetadata.Title}" />
                                    <TextBlock Text="{Binding YoutubeMetadata.Author, StringFormat=' by {0}'}" />
                                    <TextBlock Text="{Binding YoutubeMetadata.Duration, StringFormat=' | {0}'}" />
                                </WrapPanel>
                            </StackPanel>

                            <!--  For PDF  -->
                            <StackPanel
                                IsVisible="{Binding #RadioBtn_PDF.IsChecked}"
                                Orientation="Vertical"
                                Spacing="4">

                                <TextBlock VerticalAlignment="Center" Text="Select File" />
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock
                                        Grid.Column="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        FontWeight="SemiLight"
                                        Text="{Binding FileName}"
                                        TextWrapping="Wrap" />
                                    <Button
                                        x:Name="OpenFileBtn"
                                        Grid.Column="1"
                                        Margin="4,0,0,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding SelectFileCommand}"
                                        Content="📁 Browse" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <Separator
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,10" />

                        <Grid
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            RowDefinitions="Auto,*">
                            <TextBlock
                                Grid.Row="0"
                                VerticalAlignment="Center"
                                Text="{Binding #slider.Value, StringFormat='Number of Cards (3-20): {0}'}" />
                            <Slider
                                x:Name="slider"
                                Grid.Row="1"
                                HorizontalAlignment="Stretch"
                                IsSnapToTickEnabled="True"
                                Maximum="20"
                                Minimum="3"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                Value="{Binding NumberOfcards}" />
                        </Grid>

                        <!--  End of Input Region Grid  -->

                        <Separator
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,10" />
                    </Grid>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Center"
                            Command="{Binding ExtractTextCommand}"
                            Content="📝 Extract text" />
                        <Button
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Center"
                            Background="#8cdb89"
                            Command="{Binding GenerateCardsCommand}"
                            Content="⚡ Generate cards"
                            FontWeight="Medium"
                            Foreground="#000000" />
                    </StackPanel>
                </StackPanel>
            </Expander>


            <!--  Preview Extracted Text Region  -->
            <Expander
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsExpanded="True">
                <Expander.Header>
                    Preview Extracted Text
                </Expander.Header>
                <Grid RowDefinitions="*,Auto">
                    <TextBox
                        Grid.Row="0"
                        AcceptsReturn="True"
                        Text="{Binding ExtractedText}"
                        TextWrapping="Wrap" />
                    <StackPanel
                        Grid.Row="1"
                        Orientation="Horizontal"
                        Spacing="4">
                        <Label Content="{Binding NumberOfExtractedTextChars, StringFormat='Characters: {0}'}" FontSize="10" />
                        <Label Content="{Binding NumberOfExtractedTextWords, StringFormat='Words: {0}'}" FontSize="10" />
                    </StackPanel>
                </Grid>
            </Expander>

            <!--  Preview Generated Cards Region  -->
            <Expander
                Grid.Row="1"
                Grid.Column="0"
                Margin="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsExpanded="True">
                <Expander.Header>
                    Preview Generated Cards
                </Expander.Header>
                <Grid RowDefinitions="*, Auto">
                    <ScrollViewer Grid.Row="0">
                        <ItemsControl Margin="0,0,0,10" ItemsSource="{Binding Cards}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="model:Card">
                                    <Border
                                        Margin="0,10,0,0"
                                        Padding="5"
                                        BorderBrush="#8cdb89"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="*,*">
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Text="{Binding Front, StringFormat='Front: {0}'}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                FontWeight="Bold"
                                                Text="{Binding Back, StringFormat='Back: {0}'}"
                                                TextWrapping="Wrap" />

                                            <Button
                                                Grid.RowSpan="2"
                                                Grid.Column="1"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).RemoveCardFromCollectionCommand}"
                                                CommandParameter="{Binding .}"
                                                Content="❌" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </ScrollViewer>


                    <StackPanel
                        Grid.Row="1"
                        Orientation="Vertical"
                        Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <CheckBox
                                x:Name="ChangeFilePrefixCheckBox"
                                Content="Change File Prefix"
                                IsChecked="{Binding ChangeFileNamePrefix}" />
                            <TextBox
                                Width="100"
                                MaxWidth="150"
                                IsVisible="{Binding #ChangeFilePrefixCheckBox.IsChecked}"
                                Text="{Binding AnkiTxtFilePrefix}"
                                Watermark="Betakad" />
                        </StackPanel>

                        <Button
                            Command="{Binding SaveAnkiCardsCommand}"
                            Content="Save Cards"
                            ToolTip.Tip="Save cards in a .txt format compatible with Anki Import Settings." />
                    </StackPanel>
                </Grid>
            </Expander>
        </Grid>

        <Panel
            x:Name="ProgressRingPanel"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="DarkGray"
            IsVisible="{Binding IsBusy}"
            Opacity="0.5">
            <progRing:ProgressRing
                Width="80"
                Height="80"
                Margin="10,20,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"
                IsActive="{Binding #ProgressRingPanel.IsVisible}" />
        </Panel>
    </Grid>
</UserControl>
